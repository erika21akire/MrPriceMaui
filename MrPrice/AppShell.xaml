<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MrPrice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MrPrice.Tabs"
    Shell.FlyoutBehavior="Disabled"
    Title="MrPrice">

    <TabBar>
        <Tab Title="EXPLORE"
             Icon="baseball_cap.png">

            <ShellContent
                Title="Fashion"
                ContentTemplate="{DataTemplate local:Fashion}" />

            <ShellContent 
                Title="Home"
                ContentTemplate="{DataTemplate local:Home}" />
            <ShellContent 
                Title="Sport"
                ContentTemplate="{DataTemplate local:Sport}"/>

            <ShellContent 
                 Title="Money"
                 ContentTemplate="{DataTemplate local:Money}"/>

        </Tab>
        <ShellContent
            Title="SHOP"
            Icon="search.png"
            ContentTemplate="{DataTemplate local:ShopPage}"/>
        <ShellContent
            Title="BAG"
            Icon="shopping_bag.png"
            ContentTemplate="{DataTemplate local:BagsPage}"/>
        <ShellContent
            Title="SCAN"
            Icon="qr_code.png"
            ContentTemplate="{DataTemplate local:ScanPage}" />
        <ShellContent
            Title="PROFILE"
            Icon="user.png"
            ContentTemplate="{DataTemplate local:ProfilePage}"/>
    </TabBar>

</Shell>
